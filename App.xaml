<Application x:Class="_1Quotes.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             xmlns:local="clr-namespace:_1Quotes">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/PresentationFramework.Fluent;component/Themes/Fluent.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <ContextMenu x:Key="TrayMenu">
                <MenuItem Header="打开窗口" Click="OnTrayOpenClick" />
                <Separator />
                <MenuItem Header="退出" Click="OnTrayExitClick" />
            </ContextMenu>

            <tb:TaskbarIcon x:Key="TrayIcon"
                            IconSource="1Quotes.ico"
                            ToolTipText="1Quotes 直角引号助手"
                            ContextMenu="{StaticResource TrayMenu}"
                            DoubleClickCommand="{x:Static local:App.TrayOpenCommand}"
                            TrayMouseDoubleClick="TrayIcon_TrayMouseDoubleClick" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
